block jumbotron
    section#top.jumbotron.carousel.slide(data-ride='carousel', data-pause='')
        .container
            h1 Steven Xu
            .separator
            p.sub personal website
        .layer

        ol.carousel-indicators
            li.active(data-target='#top', data-slide-to='0')
            li(data-target='#top', data-slide-to='1')
            li(data-target='#top', data-slide-to='2')
            li(data-target='#top', data-slide-to='3')
        .carousel-inner(role='listbox')
            .item.carousel-item-1.active
            .item.carousel-item-2
            .item.carousel-item-3
            .item.carousel-item-4
        a.left.carousel-control(href='#top', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden=true)
            span.sr-only Previous
        a.right.carousel-control(href='#top', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden=true)
            span.sr-only Next

block profile
